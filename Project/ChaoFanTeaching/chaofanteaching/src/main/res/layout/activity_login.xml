<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".sign.LoginActivity">

    /*登陆页图片 */
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    /*输入框*/

    <EditText
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:id="@+id/myId"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:inputType="textEmailSubject"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#888888"
        android:hint="请输入账号"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        android:autofillHints="" />
    <EditText
        android:id="@+id/myPW"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:inputType="textPassword"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#888888"
        android:hint="请输入密码"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myId"
        app:layout_constraintVertical_bias="0.05"/>
    /*登陆按钮*/

    <ImageView
        android:id="@+id/myLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPW"
        app:layout_constraintVertical_bias="0.4"/>
    <ImageView
        android:id="@+id/quicklogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPW"
        app:layout_constraintVertical_bias="0.1"/>

    /*底部按钮和文字*/
    <TextView
        android:id="@+id/findMyPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="15sp"
        android:textColor="#4B4B4B"
        android:textStyle="bold"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shugang"
        app:layout_constraintTop_toBottomOf="@+id/myLoginBtn"
        app:layout_constraintVertical_bias="0.35"/>
    <TextView
        android:id="@+id/shugang"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#D9DADE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myLoginBtn"
        app:layout_constraintVertical_bias="0.3"/>
    <TextView
        android:id="@+id/toLogonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#4B4B4B"
        android:text="用户注册"
        android:textStyle="bold"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toRightOf="@+id/shugang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myLoginBtn"
        app:layout_constraintVertical_bias="0.35"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆即代表阅读并同意"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/serviceAgreement"
        app:layout_constraintTop_toBottomOf="@+id/shugang"
        app:layout_constraintVertical_bias="0.1"/>
    <TextView
        android:id="@+id/serviceAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#4B4B4B"
        android:text="服务协议"
        android:textStyle="bold"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shugang"
        app:layout_constraintVertical_bias="0.1"/>



</android.support.constraint.ConstraintLayout>
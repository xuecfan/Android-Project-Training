<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.example.chaofanteaching.RoundImageView
        android:id="@+id/u_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:src="@drawable/pingjia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/comment_is_on_time_txt"
        android:text="是否准时"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/u_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"/>
    <RatingBar
        android:id="@+id/comment_is_on_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:numStars="5"
        style="?ratingBarStyleSmall"
        app:layout_constraintTop_toTopOf="@id/comment_is_on_time_txt"
        app:layout_constraintLeft_toRightOf="@+id/comment_is_on_time_txt"
        app:layout_constraintBottom_toBottomOf="@+id/comment_is_on_time_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/comment_teach_quality_txt"
        android:text="教学质量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_is_on_time_txt"
        app:layout_constraintLeft_toRightOf="@+id/u_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"/>
    <RatingBar
        android:id="@+id/comment_teach_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:numStars="5"
        style="?ratingBarStyleSmall"
        app:layout_constraintTop_toTopOf="@+id/comment_teach_quality_txt"
        app:layout_constraintLeft_toRightOf="@+id/comment_teach_quality_txt"
        app:layout_constraintBottom_toBottomOf="@+id/comment_teach_quality_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/comment_content"
        android:text="评价内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxEms="15"
        app:layout_constraintTop_toBottomOf="@+id/comment_teach_quality_txt"
        app:layout_constraintLeft_toRightOf="@+id/u_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/u_id"
        android:text="张三"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/u_image"
        app:layout_constraintLeft_toLeftOf="@+id/u_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/u_image"
        app:layout_constraintVertical_bias="0"/>
